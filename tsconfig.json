{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "target": "es5",
        "module": "node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es6",
            "esnext"
        ],
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
            "#src/*": ["src/*"]
        },
        "types": [
            "node",
            "jest",
            "express"
        ]
    },
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}
